    "!pip install requests\n",
    "!pip install beautifulsoup4\n",
    "\n",
    "import requests\n",
    "from bs4 import BeautifulSoup\n",
    "\n",
    "def get_news_text_from_url(url):\n",
    "    try:\n",
    "        response = requests.get(url, timeout=10)\n",
    "        response.raise_for_status()\n",
    "        soup = BeautifulSoup(response.content, 'html.parser')\n",
    "        paragraphs = soup.find_all('p')\n",
    "        return ' '.join(p.get_text() for p in paragraphs).strip()\n",
    "    except Exception as e:\n",
    "        print(f\"[Error] Failed to get content from URL: {e}\")\n",
    "        return None\n",
    "\n",
    "url = \"https://www.bbc.com/future/article/20250528-why-some-countries-dont-fluoridate-their-water\"\n",
    "\n",
    "input_text = get_news_text_from_url(url)\n",
    "result = classify_article_with_llm(input_text)\n",
    "\n",
    "print(\"\\nüß† LLM Output:\\n\")\n",
    "print(result)"
